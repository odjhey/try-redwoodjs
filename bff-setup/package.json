{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "admin",
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "patch-package",
    "rw:admin": "WEB_PATH=./admin yarn rw"
  },
  "devDependencies": {
    "@redwoodjs/core": "0.42.1",
    "patch-package": "^6.4.7"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.17 <=16.x",
    "yarn": ">=1.15 <2"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  }
}
